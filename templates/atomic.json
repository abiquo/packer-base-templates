{
  "variables": {
    "abiquo_username": "{{env `ABIQUO_USERNAME`}}",
    "abiquo_password": "{{env `ABIQUO_PASSWORD`}}"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart_file`}} SERVERNAME={{user `vm_name`}} biosdevname=0 net.ifnames=0<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "vmdk_name": "{{user `vm_name`}}",
      "guest_os_type": "centos-64",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "shutdown_command" : "shutdown -h now",
      "shutdown_timeout" : "30s",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
          "memsize": "{{user `ram`}}",
          "numvcpus": "{{user `cpu`}}"
      },
      "output_directory": "output-{{user `vm_name`}}-vmware",
      "vnc_bind_address": "0.0.0.0"
    }
  ],
  "provisioners": [
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "{{user `vm_name`}}-manifest.json"
    },
    {
      "type": "shell-local",
      "inline": "jq '.last_run_uuid as $p | .builds[] | select(.packer_run_uuid == $p) | .files[] | select(.name | contains(\"vmx\")) | select(.name | contains(\"vmxf\") | not ) | .name' {{user `vm_name`}}-manifest.json | xargs output_processors/file",
      "environment_vars": [ "OUTPUT_DIR={{user `output_dir`}}", "VM_NAME={{user `vm_name`}}" ] 
    },
    {
      "type": "abiquo",
      "api_url": "https://mothership.bcn.abiquo.com/api",
      "api_username": "{{user `abiquo_username`}}",
      "api_password": "{{user `abiquo_password`}}",
      "datacenter": "Abiquo BCN",
      "template_name": "{{user `vm_name`}}",
      "description": "{{user `info`}} {{timestamp}}",
      "category": "{{user `category`}}",
      "cpu": "{{user `cpu`}}",
      "ram_mb": "{{user `ram`}}",
      "login_user": "{{user `ssh_username`}}",
      "login_password": "{{user `ssh_password`}}",
      "eth_driver": "VIRTIO",
      "chef_enabled": "true",
      "icon_url": "{{user `icon`}}"
    }
  ]
}