{
  "builders": [
    {
      "vm_name": "{{user `vm_name`}}",
      "type": "vmware-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{user `headless`}}",
      "boot_wait": "2m",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "shutdown_timeout": "{{user `shutdown_timeout`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "tools_upload_flavor": "windows",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/windows/microsoft-updates.bat",
        "./scripts/windows/openssh.ps1",
        "./scripts/windows/win-updates.ps1",
        "./scripts/windows/cloudbase-init.ps1"
      ],
      "vmx_data": {
        "memsize": "{{user `ram`}}",
        "numvcpus": "{{user `cpu`}}",
        "scsi0.virtualDev": "lsisas1068"
      },
      "output_directory": "output-{{user `vm_name`}}-vmware",
      "vnc_bind_address": "0.0.0.0"
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "inline": "net stop \"windows update\""
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/windows/ntp.bat",
        "./scripts/windows/vm-guest-tools.bat",
        "./scripts/windows/enable-rdp.bat",
        "./scripts/windows/disable-auto-logon.bat",
        "./scripts/windows/registry-size.bat"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "shell-local",
      "command": "sleep 60"
    },
    {
      "type": "windows-shell",
      "inline": "msdtc -uninstall"
    },
    {
      "type": "windows-shell",
      "inline": "msdtc -install"
    },
    {
      "type": "windows-shell",
      "inline": "powershell.exe -File a:\\cloudbase-init.ps1"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "{{user `vm_name`}}-manifest.json"
    },
    {
      "type": "shell-local",
      "inline": "jq '.last_run_uuid as $p | .builds[] | select(.packer_run_uuid == $p) | .files[] | select(.name | contains(\"vmx\")) | select(.name | contains(\"vmxf\") | not ) | .name' {{user `vm_name`}}-manifest.json | xargs output_processors/file",
      "environment_vars": [ "OUTPUT_DIR={{user `output_dir`}}", "VM_NAME={{user `vm_name`}}" ] 
    }
  ]
}