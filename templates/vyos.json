{
  "variables": {
    "abiquo_username": "{{env `ABIQUO_USERNAME`}}",
    "abiquo_password": "{{env `ABIQUO_PASSWORD`}}"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<enter><wait10><wait10>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "install system<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "Yes<enter><wait>",
        "<enter><wait10><wait10>",
        "<enter><wait>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "<enter><wait5>",
        "reboot<enter><wait>",
        "Yes<enter><wait10><wait10><wait10>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "configure<enter><wait>",
        "set interfaces ethernet eth0 address dhcp<enter><wait>",
        "set system login user {{user `ssh_username`}} authentication plaintext-password {{user `ssh_password`}}<enter><wait>",
        "set system login user {{user `ssh_username`}} level admin<enter><wait>",
        "set service ssh<enter><wait>",
        "commit<enter><wait>",
        "save<enter><wait>",
        "exit<enter><wait>",
        "exit<enter><wait5>",
        "{{user `ssh_username`}}<enter><wait>",
        "{{user `ssh_password`}}<enter><wait>",
        "configure<enter><wait>",
        "delete system login user vyos<enter><wait>",
        "commit<enter><wait>",
        "save<enter><wait>",
        "exit<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "vmdk_name": "{{user `vm_name`}}",
      "guest_os_type": "debian8-64",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "shutdown_command" : "sudo shutdown -h now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "memsize": "{{user `ram`}}",
        "numvcpus": "{{user `cpu`}}"
      },
      "output_directory": "output-{{user `vm_name`}}-vmware",
      "vnc_bind_address": "0.0.0.0"
    }
  ],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/vyos-init.sh",
      "scripts/finish.sh"
    ]
  }],
  "post-processors": [
    {
      "type": "manifest",
      "output": "{{user `vm_name`}}-manifest.json"
    },
    {
      "type": "shell-local",
      "inline": "jq '.last_run_uuid as $p | .builds[] | select(.packer_run_uuid == $p) | .files[] | select(.name | contains(\"vmx\")) | select(.name | contains(\"vmxf\") | not ) | .name' {{user `vm_name`}}-manifest.json | xargs output_processors/file",
      "environment_vars": [ "OUTPUT_DIR={{user `output_dir`}}", "VM_NAME={{user `vm_name`}}" ] 
    },
    {
      "type": "abiquo",
      "api_url": "https://mothership.bcn.abiquo.com/api",
      "api_username": "{{user `abiquo_username`}}",
      "api_password": "{{user `abiquo_password`}}",
      "datacenter": "Abiquo BCN",
      "template_name": "{{user `vm_name`}}",
      "description": "{{user `info`}} {{timestamp}}",
      "category": "{{user `category`}}",
      "cpu": "{{user `cpu`}}",
      "ram_mb": "{{user `ram`}}",
      "login_user": "{{user `ssh_username`}}",
      "login_password": "{{user `ssh_password`}}",
      "eth_driver": "VIRTIO",
      "chef_enabled": "false",
      "icon_url": "{{user `icon`}}"
    }
  ]
}